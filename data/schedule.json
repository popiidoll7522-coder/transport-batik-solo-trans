import json

with open("data/schedule.json") as f:
    schedule = json.load(f)

def jawab_jadwal(koridor):
    if koridor in schedule:
        data = schedule[koridor]
        return (
            f"Jadwal BST {koridor.replace('_', ' ').title()}:\n"
            f"- Mulai: {data['start']}\n"
            f"- Selesai: {data['end']}\n"
            f"- Interval: {data['interval']} menit"
        )
    else:
        return "Koridor tidak ditemukan."

while True:
    tanya = input("Apa yang ingin Anda ketahui? ").lower()

    if "koridor 1" in tanya:
        print(jawab_jadwal("koridor_1"))
    elif "koridor 2" in tanya:
        print(jawab_jadwal("koridor_2"))
    elif "bst" in tanya:
        print("BST beroperasi setiap hari. Silakan sebutkan koridornya.")
    else:
        print("Maaf, saya belum mengerti pertanyaan itu.")

